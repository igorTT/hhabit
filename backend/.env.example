# TogetherAI API Configuration
# Get your API key from https://together.ai/
TOGETHER_API_KEY=your_together_api_key_here

# API Server Configuration
# Host address for the API server
API_HOST=0.0.0.0
# Port number for the API server
API_PORT=8000

# AI Model Configuration
# Model name from TogetherAI (using Llama 3.3 70B Instruct Turbo Free)
MODEL_NAME=meta-llama/Llama-3.3-70B-Instruct-Turbo-Free
# Maximum number of tokens in the response
MAX_TOKENS=4096
# Temperature for response generation (0.0 to 1.0)
# Lower values make responses more focused, higher values more creative
TEMPERATURE=0.7

# Optional: Advanced Model Settings
# These can be configured in src/config/ai_config.py
# TOP_P=0.95
# TOP_K=40
# REPETITION_PENALTY=1.1
# CONTEXT_WINDOW=8192
# STREAM=false

# Optional: Database Configuration
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=healthhabit
# DB_USER=postgres
# DB_PASSWORD=your_password_here

# Optional: Logging Configuration
# LOG_LEVEL=INFO
# LOG_FILE=healthhabit.log 